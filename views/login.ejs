<%- include('partials/header') %>

<% if (messages.error) {%>
<!--Flash sets messages variable, passport-config generates error-->
<%= messages.error %>
<% } %>

<div class="main container" id="control">
    <div id="box">
        <h1 class="text-center">Login</h1>
        <form id="login" action="/login" method="POST" class="form-group text-center">
            <div class="container mt-2">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="" id="email" name="email" aria-describedby="emailHelp">
            </div>
            <div class="container mt-2">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="" id="password" name="password">
            </div>
            <br>
            <div class="container mt-2">
                <a id="passwordForget" href="/passForgot">Forgot password?</a>
                <br>
                <button id="submit" type="submit" class="btn mt-2">Submit</button>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer') %>